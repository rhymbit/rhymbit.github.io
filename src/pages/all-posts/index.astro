---
import BaseLayout from "@/layouts/base-layout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<BaseLayout class="flex flex-col">
  <main
    data-pagefind-ignore
    class="px-2 w-full h-full grow flex flex-col gap-y-28 overflow-x-clip 2xl:gap-y-44"
  >
    <ul class="my-10 flex flex-col items-center gap-y-3">
      {
        allPosts.map((post) => (
          <li class="w-full max-w-4xl">
            <a href={`/${post.id}`} class="hover:underline underline-offset-4">
              <span>{post.data.title} :</span>
              <span class="text-sm">{post.data.description}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
